<div class="row">
	<div class="col-lg-5 col-lg-offset-4">
		<div class="row">
			{{#item}}
			<div class="col-lg-3"><img src="{{image}}" /></div>
			<div class="col-lg-9">
				<strong>{{name}}</strong><br />
				<em>Amount: {{amount}}</em>

				<p>
				<ul class="nav nav-tabs nav-stacked" id="item-actions">
					{{#menu}}
					{{#extra}}
					<li class="dropdown">
						<a class="dropdown-toggle" data-toggle="dropdown" href="#">{{text}} <span class="caret pull-right"></span></a>
						<ul class="dropdown-menu pull-right" role="menu" style="width: 230px;">
							<li>
								<form class="form-inline" method="post" action="{{url}}">
									<input type="hidden" name="action" value="{{action}}" />
									<input type="hidden" name="csrf" value="{{csrf}}" />
									<input style="margin-left: 10px;" type="{{field_type}}" name="{{field_name}}" class="{{field_classes}}" />
									<input type="submit" class="btn btn-primary btn-sm" value="{{field_button}}" />
								</form>
							</li>
						</ul>
					</li>
					{{/extra}}
					{{#normal}}
					<li>
						<form method="post" action="{{url}}"><input type="hidden" name="csrf" value="{{csrf}}" /><input type="hidden" name="action" value="{{action}}" /><input type="submit" class="btn btn-link" value="{{text}}" /></form>
					</li>
					{{/normal}}
					{{/menu}}
				</ul>
				</p>
			</div>
		</div>
		{{/item}}
	</div>
</div>

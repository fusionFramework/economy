<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<div class="row text-center">
			{{&menu}}
		</div>

		<div class="row">
			<br />
			<div class="pull-right">
				<form action="" method="post" class="form-inline">
					<input type="hidden" name="csrf" value="{{csrf}}" />
					<div class="form-group">
						<input type="text" class="form-control" placeholder="Search" name="term" value="{{term}}">
					</div>
					<button type="submit" class="btn btn-default">Search</button>
				</form>
			</div>
			{{& pagination}}
		</div>
		{{#term}}
			<div class="row">
				<p>We have found {{count_results}} result(s) for "<i>{{term}}</i>"</p>
			</div>
			<div class="row">
            <table class="table table-hover table-striped">
                <thead>
                <tr>
                    <th class="col-lg-1"></th>
                    <th class="col-lg-2">Item</th>
                    <th class="col-lg-3">User</th>
                    <th class="col-lg-4">Run</th>
                    <th class="col-lg-2">Auto buy</th>
                </tr>
                </thead>
                {{#lots}}
                    <tr data-id="{{id}}" class="auction">
                        <td>
                            <a href="{{lot_link}}"><img src="{{item.img}}" width="40" height="40" /></a>
                        </td>
                        <td><a href="{{lot_link}}">{{item.name}}</a></td>
                        <td><a href="{{user_profile}}">{{username}}</a></td>
                        <td>{{until}}</td>
                        <td class="text-center"><i class="fa fa-{{#autobuy}}check{{/autobuy}}{{^autobuy}}times{{/autobuy}}"></i></td>

                    </tr>
                {{/lots}}
            </table>

			</div>
		{{/term}}
			<div class="row">
				<div class="text-center">{{& pagination}}</div>
			</div>
		</div>
	</div>
</div>
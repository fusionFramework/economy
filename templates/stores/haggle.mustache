<div class="row">
	<div class="col-lg-offset-4 col-lg-4">
		<p class="text-center">
			<img src="{{npc.img}}" /> <br />
			{{npc.msg}}
		</p>
	</div>
</div>
<span id="csrf" class="hide">{{csrf}}</span>
<div class="row">
	{{#items}}
		<div class="col-lg-3 item-entity" data-store-id="{{id}}">
			<p class="text-center">
				<img src="{{img}}" /><br />
				<span class="item-stock">{{stock}}</span> <span class="item-name">{{name}}</span><br />
				Price: {{price}}<br />
				<form class="form col-lg-5 col-lg-offset-2">
					<input type="number" name="price" class="item-price form-control input-sm">
				</form>
				<a href="#" data-link="{{link}}" class="haggle btn btn-default btn-sm">Buy</a>
			</p>
		</div>
	{{/items}}
	{{^items}}
	<div class="col-lg-12">
		<p class="text-center text-muted">- There are no items in stock -</p>
	</div>
	{{/items}}
</div>
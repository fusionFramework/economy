<div class="center-block">
	{{&menu}}
</div>
<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<form action="{{#uri}}shop.inventory{{/uri}}/{{page}}" method="post">
		<input type="hidden" name="csrf" value="{{csrf}}" />

		<table class="table table-striped table-condensed">
		<thead>
			<tr>
				<th class="col-lg-1"></th>
				<th class="col-lg-4">Name</th>
				<th class="col-lg-2">#</th>
				<th class="col-lg-3">Price</th>
				<th class="col-lg-1"><i class="fa fa-times-circle"></i> </th>
			</tr>
		</thead>
		<tbody>
			{{#items}}
				<tr>
					<td><img src="{{img}}" width="40" height="40" /></td>
					<td>{{name}}</td>
					<td><em>{{amount}}</em></td>
					<td><input class="input-sm form-control" type="text" name="item[{{id}}][price]" value="{{price}}" /></td>
					<td><input type="checkbox" name="item[{{id}}][remove]" /></td>
				</tr>
			{{/items}}
			{{^items}}
				<tr>
					<td colspan="5" style="text-align: center;">You have no items in stock.</td>
				</tr>
			{{/items}}
			<tr>
				<td colspan="3"> </td>
				<td colspan="2" class="pull-right"><input type="submit" class="btn btn-primary" value="Update stock" /></td>
			</tr>
		</tbody>
		</table>
		{{& pagination}}
		</form>
	</div>
</div>

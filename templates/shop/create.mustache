<div class="row">
	<div class="col-lg-8 col-lg-offset-2">
		<form class="form form-horizontal" method="post">
		<input type="hidden" name="csrf" value="{{csrf}}" />
			<div class="form-group">
		    	<label class="control-label col-lg-3" for="input-title">Title</label>
		    	<div class="col-lg-5">
		      		<input type="text" id="input-title" class="form-control" name="title">
		    	</div>
		  	</div>
		  	<div class="form-group">
		    	<label class="control-label col-lg-3" for="input-description">Description</label>
		    	<div class="col-lg-5">
		      		<textarea name="description" id="input-description" class="form-control" rows="5"></textarea>
		      		{{#creation}}
		      			<span class="help-block">It costs {{cost}} {{currency}} to create a shop.</span>
		      		{{/creation}}
		    	</div>
		  	</div>
		  	<div class="form-group">
			    <div class="col-lg-offset-3">
				    <input type="submit" class="btn btn-primary" value="Create shop">
			    </div>
			</div>
		</form>
	</div>
</div>
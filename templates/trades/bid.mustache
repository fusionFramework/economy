<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<div class="row text-center">
			{{&menu}}
		</div>
		<br />
	</div>
</div>
<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		{{#is_owner}}
			<div class="row text-center text-warning">
				You own this lot, you don't need to bid on it.
			</div>
		{{/is_owner}}
		{{^is_owner}}
		{{^unable}}
		{{#lot}}
		<div class="row">
			You are bidding on lot <strong>#{{id}}</strong> - by <em><a href="{{profile}}">{{username}}</a></em>
		</div>
		<div class="row">
			<ul class="media-list col-lg-offset-2">
				{{#items}}
				<li class="media">
					<div class="pull-left">
						<img src="{{img}}" class="media-object" width="45" heigth="45"/>
					</div>
					<div class="media-body col-lg-8">
						{{name}}
					</div>
				</li>
				{{/items}}
			</ul>
		</div>
		<div class="row">
			<div class="col-lg-offset-1">
				<em>{{description}}</em>
			</div>
		</div>
		{{/lot}}
	<form action="{{process_url}}" method="post">
		<input type="hidden" name="csrf" value="{{csrf}}"/>

		<div class="row">
			<p class="text-center text-muted">
				You can selected up to {{max_items}} {{max_type}}
			</p>
		</div>
		<div class="row">
			<ul class="media-list col-lg-offset-2">
				{{#items}}
				<li class="media">
					<div class="pull-left">
						<img src="{{img}}" width="45" heigth="45"/>
					</div>
					<div class="media-body col-lg-6">
						{{name}}
						<div class="col-lg-6 pull-right">
							<input class="input-sm form-control" type="number" name="items[{{id}}]" value="0"/>
						</div>
					</div>
				</li>
				{{/items}}
			</ul>
		</div>
		<div class="row">
			<div class="col-lg-1 col-lg-offset-2">Points:</div>
			<div class="col-lg-3">
				<input type="number" class="input-sm form-control" name="points"/>
			</div>
		</div>
		<div class="row">
			<div class="text-center"><input type="submit" class="btn btn-primary" value="Bid"/></div>
		</div>
	</form>
	{{/unable}}
		{{#unable}}
			<div class="row text-center text-error">
				You don't have any items to make a bid with.
			</div>
		{{/unable}}
		{{/is_owner}}
</div>
</div>
